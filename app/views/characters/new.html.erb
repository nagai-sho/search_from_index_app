<h1>キャラクターの新規作成</h1>
<%= form_with model: @character do |f| %>
  <%= f.label :name, '名前' %><br>
  <%= f.text_field :name, placeholder: '入力してください' %><br>
  <%= f.label :age, '年齢' %><br>
  <%= f.number_field :age, placeholder: '入力してください' %><br>
  <%= f.label :detail, '詳細設定' %><br>
  <%= f.text_area :detail, placeholder: '入力してください' %><br>
  <%= f.submit '作成' %>
<% end %>